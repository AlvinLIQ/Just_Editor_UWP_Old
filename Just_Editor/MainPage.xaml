<Page
    x:Class="Just_Editor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Just_Editor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Name="TopBar_Grid" Background="#999">
                <StackPanel Name="ToolBar1" HorizontalAlignment="Left">
                    <Button Name="HomeButton" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            Click="HomeButton_Click" Background="#0000" >
                        <Image Source="Assets/Home_Icon.png" Width="20"/>
                    </Button>
                </StackPanel>
                <StackPanel Name="TopStackPanel" Orientation="Horizontal" Margin="35,0,35,0">
                    <StackPanel Name="WindowPanel" Orientation="Horizontal" BorderThickness="0.4, 0, 0.4, 0" BorderBrush="LightGray" HorizontalAlignment="Left"
                                SizeChanged="WindowPanel_SizeChanged">
                    </StackPanel>
                    <Button Name="AddWindow_Button" Foreground="#5D5B5B" VerticalContentAlignment="Center" 
                            Click="AddWindow_Button_Click" VerticalAlignment="Stretch" Background="#0000" Content="+" FontWeight="Bold">
                    </Button>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <Button Name="GetHiddenWindow_Button" Foreground="#5D5B5B" Background="#0000" Content="..." VerticalContentAlignment="Center"
                            VerticalAlignment="Stretch" FontWeight="Bold" Height="35" Width="35" Click="GetHiddenWindow_Button_Click"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Frame Name="MainFrame" Navigated="MainFrame_Navigated" Margin="0,0,0,30"/>

                <StackPanel Name="HiddenWindowPanel" HorizontalAlignment="Right" Background="#CCC" Height="0" VerticalAlignment="Top" Margin="0,0,10,0">
                    
                </StackPanel>
                
                <Grid Background="WhiteSmoke" VerticalAlignment="Bottom" Height="30" Padding="10,0,10,0">
                    <TextBlock Text="Just_Editor Ver.Test" Foreground="#5D5B5B" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"/>
                    <Button Name="SettingsButton" HorizontalAlignment="Right" Padding="0" Background="#0000" BorderThickness="0" Height="20"
                            Width="30" VerticalAlignment="Stretch" Click="SettingsButton_Click">
                        <Image Height="15" Source="Assets/Setting_Icon.png"/>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <SplitView Name="SettingsSplit" DisplayMode="Overlay" PanePlacement="Right" HorizontalAlignment="Right" OpenPaneLength="300">
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="20" Padding="10,10,0,0" Foreground="#5D5B5B">
                        Settings
                    </TextBlock>
                    <StackPanel Padding="20,10,0,0">
                        <ComboBox Header="Save files before exit">
                            <ComboBoxItem Content="Ask me every time"/>
                            <ComboBoxItem Content="Auto save"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
