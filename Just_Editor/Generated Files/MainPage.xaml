<Page
    x:Class="Just_Editor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Just_Editor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid x:ConnectionId='2' Name="TopBar_Grid" Background="#999">
                <StackPanel x:ConnectionId='6' Name="ToolBar1" HorizontalAlignment="Left">
                    <Button x:ConnectionId='11' Name="HomeButton" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                     Background="#0000" >
                        <Image Source="Assets/Home_Icon.png" Width="20"/>
                    </Button>
                </StackPanel>
                <StackPanel x:ConnectionId='7' Name="TopStackPanel" Orientation="Horizontal" Margin="35,0,35,0">
                    <StackPanel x:ConnectionId='9' Name="WindowPanel" Orientation="Horizontal" BorderThickness="0.4, 0, 0.4, 0" BorderBrush="LightGray" HorizontalAlignment="Left"
                                                                     >
                    </StackPanel>
                    <Button x:ConnectionId='10' Name="AddWindow_Button" Foreground="#5D5B5B" VerticalContentAlignment="Center" 
                                                           VerticalAlignment="Stretch" Background="#0000" Content="+" FontWeight="Bold">
                    </Button>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <Button x:ConnectionId='8' Name="GetHiddenWindow_Button" Foreground="#5D5B5B" Background="#0000" Content="..." VerticalContentAlignment="Center"
                            VerticalAlignment="Stretch" FontWeight="Bold" Height="35" Width="35"                                     />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Frame x:ConnectionId='4' Name="MainFrame"                                 Margin="0,0,0,30"/>

                <Grid Background="WhiteSmoke" VerticalAlignment="Bottom" Height="30" Padding="10,0,10,0">
                    <TextBlock Text="Just_Editor Ver.Test" Foreground="#5D5B5B" FontWeight="Bold" FontSize="13" VerticalAlignment="Center"/>
                    <Button x:ConnectionId='5' Name="SettingsButton" HorizontalAlignment="Right" Padding="0" Background="#0000" BorderThickness="0" Height="20"
                            Width="30" VerticalAlignment="Stretch"                             >
                        <Image Height="15" Source="Assets/Setting_Icon.png"/>
                    </Button>
                </Grid>
            </Grid>
            <StackPanel x:ConnectionId='3' Name="HiddenWindowPanel" Grid.Row="1" HorizontalAlignment="Right" Background="#CCC" Height="0" VerticalAlignment="Top" Margin="0,0,10,0">

            </StackPanel>
        </Grid>
        <SplitView x:ConnectionId='1' Name="SettingsSplit" DisplayMode="Overlay" PanePlacement="Right" HorizontalAlignment="Right" OpenPaneLength="300">
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock FontWeight="Bold" FontSize="20" Padding="10,10,0,0" Foreground="#5D5B5B">
                        Settings
                    </TextBlock>
                    <StackPanel Padding="20,10,0,0">
                        <ComboBox Header="Save files before exit" SelectedIndex="1">
                            <ComboBoxItem Content="Ask me every time"/>
                            <ComboBoxItem Content="Auto save"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

