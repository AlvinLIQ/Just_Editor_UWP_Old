<UserControl
    x:Class="Just_Editor.DuronWordItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Just_Editor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Name="MainGrid" PointerEntered="Word_PointerOver" PointerExited="Word_PointerOut" PointerCaptureLost="Word_PointerOut">
        <TextBlock Name="ItemTitle" Text="{x:Bind Identifier,Mode=OneWay}" Foreground="{x:Bind OverBrush}" FontSize="19"/>
    </Grid>
</UserControl>
